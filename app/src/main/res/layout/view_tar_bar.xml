<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="3dp"
    android:baselineAligned="false">

    <LinearLayout
        android:id="@+id/tab0_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.perhamer.MyAndroid.view.RadiusImageWidget
            android:id="@+id/tab0_iv"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center"
            android:src="@mipmap/home_home" />

        <com.perhamer.MyAndroid.view.FontTextView
            android:id="@+id/tab0_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@color/colorDark"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab1_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.perhamer.MyAndroid.view.RadiusImageWidget
            android:id="@+id/tab1_iv"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="3dp"
            android:gravity="center"

            android:src="@mipmap/home_me" />

        <com.perhamer.MyAndroid.view.FontTextView
            android:id="@+id/tab1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/home_me"
            android:textColor="@color/colorDark"
            android:textSize="13sp" />
    </LinearLayout>



</LinearLayout>